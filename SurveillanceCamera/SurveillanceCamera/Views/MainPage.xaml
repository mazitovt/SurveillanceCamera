                      <StackLayout Padding="10">  
                        <Frame BorderColor="LightGray" CornerRadius="15" HasShadow="True" Padding="5">  
                            <Grid Padding="5" ColumnSpacing="0" RowSpacing="0" Margin="2">  
                                <Grid.RowDefinitions>  
                                    <RowDefinition Height="220"/>  
                                    <RowDefinition Height="Auto"/>  
                                    <RowDefinition Height="Auto"/>  
                                </Grid.RowDefinitions> 
                                <Image Grid.Row="0" Source="{Binding Image}" Aspect="AspectFit"/>  
                                <Label Grid.Row="1" FontSize="Large" Text="{Binding Name}" TextColor="#14B7F8" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand"/>  
                                <Label Grid.Row="2" Text="{Binding Id}" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" FontAttributes="Bold"/>
                            </Grid>  
                        </Frame>  
                        </StackLayout>  
                   </DataTemplate>
               </CollectionView.ItemTemplate>
           </CollectionView>
       </RefreshView>
       
